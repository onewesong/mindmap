{
  "name": "mindmap-electron",
  "version": "1.0.0",
  "description": "一个使用Electron开发的思维导图应用",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --reload",
    "build": "electron-builder",
    "pack": "electron-builder --dir"
  },
  "keywords": [
    "mindmap",
    "electron",
    "思维导图"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "electron-icon-builder": "^2.0.1"
  },
  "build": {
    "appId": "com.mindmap.electron",
    "productName": "MindMap",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*"
    ],
    "icon": "src/icons/icons/png/256x256.png",
    "mac": {
      "icon": "src/icons/icons/mac/icon.icns"
    },
    "win": {
      "icon": "src/icons/icons/win/icon.ico"
    },
    "linux": {
      "icon": "src/icons/icons/png",
      "category": "Office",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "publish": [
      {
        "provider": "github",
        "releaseType": "release",
        "owner": "onewesong",
        "repo": "mindmap"
      }
    ]
  }
}
